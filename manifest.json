{
    "name": "News highlighter",
    "version": "1.0",
    "description": "Highlight new info in news",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "News highlighter",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://meduza.io/*", "https://lenta.ru/*"],
            "run_at": "document_end",
            "js": ["highlighter.js"],
            "css": ["highlighter.css"]
        }        
    ],
    "permissions": [
        "http://localhost:8000/"
    ],
    "manifest_version": 2
}